rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Projects collection
    match /Projects/{projectId} {
      allow read, write: if true; // In production, add proper authentication
    }
    
    // Users collection - for user profiles and GitHub OAuth data
    match /Users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Documents collection
    match /Documents/{documentId} {
      allow read, write: if true; // In production, add proper authentication
    }
    
    // Templates collection
    match /Templates/{templateId} {
      allow read, write: if true; // In production, add proper authentication
    }
    
    // Document History collection - escaped names
    match /DocumentHistory/{historyId} {
      allow read, write: if true; // In production, add proper authentication
    }
    
    // Chatbox History collection - escaped names
    match /ChatboxHistory/{chatboxId} {
      allow read, write: if true; // In production, add proper authentication
    }
  }
}