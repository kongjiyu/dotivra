# GitHub OAuth Configuration (for user authentication)
# Create a GitHub OAuth App at: https://github.com/settings/applications/new
# Set Authorization callback URL to: http://localhost:5173/profile?github_callback=true
VITE_GITHUB_CLIENT_ID=your_oauth_client_id_here
VITE_GITHUB_CLIENT_SECRET=your_oauth_client_secret_here  
VITE_GITHUB_REDIRECT_URI=http://localhost:5173/profile?github_callback=true

# Legacy GitHub App Configuration (optional, can be removed)
GITHUB_APP_ID=your_github_app_id
GITHUB_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----
your_github_private_key_here
-----END RSA PRIVATE KEY-----"
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Server Configuration
PORT=3001
NODE_ENV=development

# API Configuration
VITE_API_URL=your_api_url

# Frontend URL for CORS
FRONTEND_URL=http://localhost:5173

# Google Gemini AI Configuration
VITE_GEMINI_API_KEY=your_gemini_api_key_here

# Firebase Configuration (Frontend) - VITE_ prefix required for Vite
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id
VITE_FIREBASE_MEASUREMENT_ID=your_measurement_id

# Feature Flags
VITE_ENABLE_FEEDBACK=true  # Set to 'true' to enable feedback tooltips and feedback features
